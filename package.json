{
  "name": "@pleaseai/config",
  "type": "module",
  "version": "1.0.0",
  "description": "PleaseAI configuration schema, loader, and generator",
  "license": "MIT",
  "author": "PleaseAI Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/pleaseai/config.git"
  },
  "homepage": "https://github.com/pleaseai/config#readme",
  "bugs": {
    "url": "https://github.com/pleaseai/config/issues"
  },
  "keywords": [
    "pleaseai",
    "config",
    "zod",
    "schema",
    "validation",
    "yaml",
    "github-bot"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup && bun run generate-schema",
    "generate-schema": "bun run scripts/generate-json-schema.ts",
    "test": "vitest run",
    "prepublishOnly": "bun run build && bun run test"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schema.json": {
      "default": "./dist/schema.json"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "zod": "^4.1.12",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.9.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.15.0",
    "tsup": "latest",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
